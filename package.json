{
    "name": "bilibili-downloader",
    "version": "0.1.2",
    "main": "main.js",
    "scripts": {
        "start": "electron .",
        "build": "electron-builder"
    },
    "keywords": [
        "bilibili"
    ],
    "author": {
        "name": "Ran",
        "email": "contact@5share.site",
        "url": "https://github.com/excpu"
    },
    "license": "AGPL",
    "description": "帮助你下载bilibili的视频",
    "devDependencies": {
        "electron": "^39.0.0",
        "electron-builder": "^26.0.12"
    },
    "dependencies": {
        "axios": "^1.13.1",
        "easydl": "^1.2.0",
        "ffmpeg-static": "^5.2.0",
        "md5": "^2.3.0",
        "ws": "^8.18.3"
    },
    "build": {
        "appId": "bilibili.downloader.app",
        "productName": "bilibili 视频下载工具",
        "directories": {
            "output": "dist"
        },
        "win": {
            "target": "nsis",
            "icon": "build/icon.ico"
        },
        "nsis": {
            "oneClick": false,
            "perMachine": false
        },
        "linux": {
            "category": "Utility",
            "icon": "build/icon.png",
            "maintainer": "Ran <contact@5share.site>",
            "target": [
                {
                    "target": "AppImage",
                    "arch": [
                        "x64",
                        "arm64"
                    ]
                },
                {
                    "target": "deb",
                    "arch": [
                        "x64",
                        "arm64"
                    ]
                }
            ]
        },
        "mac": {
            "category": "public.app-category.utilities",
            "icon": "build/icon.icns",
            "target": [
                {
                    "target": "dmg",
                    "arch": [
                        "x64",
                        "arm64"
                    ]
                },
                {
                    "target": "zip",
                    "arch": [
                        "x64",
                        "arm64"
                    ]
                }
            ]
        }
    }
}